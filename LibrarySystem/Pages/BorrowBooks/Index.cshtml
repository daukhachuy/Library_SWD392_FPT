@page "{bookId:int?}"
@model LibraryWeb.Pages.BorrowBooks.IndexModel
@{
    ViewData["Title"] = "Borrow Confirmation";
}

@if (Model.SelectedBook != null)
{
    <h3>Bạn có chắc chắn muốn mượn sách này?</h3>
    <div>
        <p><strong>Tiêu đề:</strong> @Model.SelectedBook.Title</p>
        <p><strong>Tác giả:</strong> @Model.SelectedBook.Author</p>
        <p><strong>Số lượng còn lại:</strong> @Model.SelectedBook.Quantity</p>

        <form method="post" asp-page-handler="Borrow">
            <input type="hidden" name="bookId" value="@Model.SelectedBook.Id" />
            <button type="submit" class="btn btn-success">Xác nhận mượn</button>
            <a asp-page="/Books/Index" class="btn btn-secondary">Hủy</a>
        </form>

    </div>
}
else
{
    <p class="text-danger">Không tìm thấy sách.</p>
}
