@page
@model LibrarySystem.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<h2>Create New Category</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category.ParentId">Parent Category</label>
        <select asp-for="Category.ParentId" class="form-control" asp-items="Model.ParentCategories">
            <option value="">-- None --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>

